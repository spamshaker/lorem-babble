{
  "name": "lorem-babble",
  "version": "1.0.0",
  "description": "A simple communication portal",
  "main": "index.js",
  "scripts": {
    "sass": "node-sass -w src/styles -o public/css",
    "lint:scss": "stylelint src/**/*.scss --syntax scss",
    "lint:scss:fix": "yarn run lint:scss --fix",
    "lint:js": "eslint . --ext .js,.ts,.tsx",
    "lint:js:fix": "yarn run lint:js --fix"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spamshaker/lorem-babble.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/spamshaker/lorem-babble/issues"
  },
  "homepage": "https://github.com/spamshaker/lorem-babble#readme",
  "devDependencies": {
    "@ria-develop/eslint-config": "^0.0.6",
    "eslint": "^7.17.0",
    "husky": "^4.3.7",
    "lint-staged": "^10.5.3",
    "node-sass": "^5.0.0",
    "postcss": "^8.2.4",
    "prettier": "^2.2.1",
    "sass": "^1.32.2",
    "stylelint": "^13.8.0",
    "stylelint-config-standard": "^20.0.0",
    "typescript": "^4.1.3"
  },
  "eslintConfig": {
    "extends": [
      "@ria-develop"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": [
      "eslint . --fix",
      "git add"
    ],
    "src/**/*.scss": [
      "stylelint --syntax scss --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
