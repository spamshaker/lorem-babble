{
  "name": "lorem-babble",
  "version": "1.0.0",
  "private": "true",
  "description": "A simple communication portal",
  "scripts": {
    "clean": "lerna exec rm -- -rf lib *.tsbuildinfo && rm -rf coverage dist",
    "build:libs": "tsc -b packages",
    "build:dist": "webpack",
    "test": "jest",
    "test:coverage": "yarn test --coverage",
    "sass": "node-sass -w src/styles -o public/css",
    "lint:styles": "stylelint src/**/*.scss --syntax scss",
    "lint:styles:fix": "yarn run lint:styles --fix",
    "lint:code": "eslint . --ext .js,.ts,.tsx",
    "lint:code:fix": "yarn run lint:code --fix",
    "start": "webpack serve"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spamshaker/lorem-babble.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/spamshaker/lorem-babble/issues"
  },
  "homepage": "https://github.com/spamshaker/lorem-babble#readme",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@octokit/core": "^3.2.4",
    "@ria-develop/eslint-config": "^0.0.6",
    "eslint": "^7.17.0",
    "fork-ts-checker-webpack-plugin": "^6.1.0",
    "html-webpack-plugin": "^4.5.1",
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "node-sass": "^5.0.0",
    "postcss": "^8.2.4",
    "prettier": "^2.2.1",
    "react-testing-library": "^8.0.1",
    "sass": "^1.32.2",
    "stylelint": "^13.8.0",
    "stylelint-config-standard": "^20.0.0",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.14",
    "ts-node": "^9.1.1",
    "tsconfig-paths-webpack-plugin": "^3.3.0",
    "typescript": "^4.1.3",
    "webpack": "^5.12.3",
    "webpack-cli": "^4.3.1",
    "webpack-dev-server": "^3.11.1"
  },
  "eslintConfig": {
    "extends": [
      "@ria-develop"
    ]
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,ts,tsx}": [
      "eslint . --fix",
      "git add"
    ],
    "src/**/*.scss": [
      "stylelint --syntax scss --fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn build:libs && yarn test"
    }
  }
}
